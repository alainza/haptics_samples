{
  "bindings": {
    "/actions/default": {
      "haptics": [
        {
          "output": "/actions/default/out/pulse",
          "path": "/user/hand/right/output/haptic"
        },
        {
          "output": "/actions/default/out/vibrate",
          "path": "/user/hand/left/output/haptic"
        }
      ],
      "sources": [
        {
          "inputs": {
            "click": {
              "output": "/actions/default/in/pulse"
            }
          },
          "mode": "button",
          "path": "/user/hand/right/input/application_menu"
        },
        {
          "inputs": {
            "click": {
              "output": "/actions/default/in/vibrate"
            }
          },
          "mode": "button",
          "path": "/user/hand/left/input/application_menu"
        },
        {
          "inputs": {
            "pull": {
              "output": "/actions/default/in/vibration_intensity"
            }
          },
          "mode": "trigger",
          "path": "/user/hand/left/input/trigger"
        }
      ]
    }
  },
  "controller_type": "hpmotioncontroller",
  "description": "HelloVR Bindings for HP controller",
  "name": "HelloVR bindings for HP Controller"
}
